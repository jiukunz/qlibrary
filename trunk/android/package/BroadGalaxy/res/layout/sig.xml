<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#1:" />

        <com.broadgalaxy.bluz.component.EnabledSeekBar
            android:id="@+id/sig1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:enabled="false"
            android:indeterminate="false"
            android:max="4"
            android:progress="0"
            android:thumb="@null" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#2:" />

        <com.broadgalaxy.bluz.component.EnabledSeekBar
            android:id="@+id/sig2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:indeterminate="false"
            android:max="4"
            android:progress="0"
            android:thumb="@null" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#3:" />

        <com.broadgalaxy.bluz.component.EnabledSeekBar
            android:id="@+id/sig3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:indeterminate="false"
            android:max="4"
            android:progress="0"
            android:thumb="@null" />
    </LinearLayout>

    <LinearLayout
        android:paddingTop="5dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#4:" />

        <com.broadgalaxy.bluz.component.EnabledSeekBar
            android:id="@+id/sig4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:indeterminate="false"
            android:max="4"
            android:progress="0"
            android:thumb="@null" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#5:" />

        <com.broadgalaxy.bluz.component.EnabledSeekBar
            android:id="@+id/sig5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:indeterminate="false"
            android:max="4"
            android:progress="0"
            android:thumb="@null" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#6:" />

        <com.broadgalaxy.bluz.component.EnabledSeekBar
            android:id="@+id/sig6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:indeterminate="false"
            android:max="4"
            android:progress="0"
            android:thumb="@null" />
    </LinearLayout>

</LinearLayout>